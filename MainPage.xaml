<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="30,60,30,30">
            <Label Text="NOTAS" HorizontalOptions="Center" FontAttributes="Bold" />
            <Editor x:Name="editor" Placeholder="AGREGA TU NOTA" HeightRequest="100"/>
            <Grid ColumnDefinitions="Auto, 30, Auto">
                <Button Grid.Column="0" Text="Guardar" WidthRequest="100" Clicked="clicarAnnadir" />
                <Button Grid.Column="2" Text="Borrar" WidthRequest="100" Clicked="clicarBorrar" />
            </Grid>
            <Label x:Name="texto1" Text="" HorizontalOptions="Start" FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
